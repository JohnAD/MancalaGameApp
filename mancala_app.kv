            size_fixed: (498, 205)
            on_release: app.root.current = "settings_screen_screen"
        Button:
            background_normal: 'assets/img/not-sound.png'
            pos_fixed: (-191, -14)
            size_fixed: (499, 289)
            on_release: app.root.current = "settings_sound_screen"
        Button:
            id: resume_game
            pos_fixed: (1300, 0)
            size_fixed: (250, 100)
            background_normal: 'assets/img/blank-wood-button.png'
            font_size_fixed: 64
            text: "Resume"
            color: (101/255.0, 244/255.0, 66/255.0, 1)
            on_release: app.resume_game()
        Button:
            id: start_game_wrapper
            pos_fixed: (1580, -20)
            size_fixed: (340, 340)
            text: "play\nMaisy"
            on_release: app.start_new_game()
            font_size_fixed: 56
            color: (0, 0, 0, 1)
            background_normal: 'assets/img/start-button.png'
        Button:
            pos_fixed: (1600, 0)
            size_fixed: (300, 100)
            on_release: app.start_new_game()
            font_size_fixed: 64
            color: (101/255.0, 244/255.0, 66/255.0, 1)
            background_normal: 'assets/img/blank-wood-button.png'
        Image:
            id: ai_face_image
            pos_fixed: (1920-410+55, 1080-417+58)
            size_fixed: (300, 300)
            source: 'assets/img/blue3.png'
        Image:
            pos_fixed: (1920-410, 1080-417)
            size_fixed: (410, 417)
            source: 'assets/img/picture-frame.png'
        Button:
            text: "Learn How to Play\n(YouTube)"
            pos_fixed: (1920 - 410, 1080 - 417 - 300)
            size_fixed: (410, 150)
            color: (0, 0, 0, 1)
            background_normal: 'assets/img/youtube-url.png'
            font_size_fixed: 56
            on_release: root.launch_url()
        Label:
            id: ai_rank
            pos_fixed: (1920 - 410/2, 1080 - 417 - 100)
            size_fixed: (200, 100)
            text_size: self.size
            font_size_fixed: 56
            color: (0, 0, 0, 1)
            markup: True
            text: 'n of 12'
        Label:
            id: ai_name
            pos_fixed: (400, 800)
            size_fixed: (1200, 200)
            text_size: self.size
            font_size_fixed: 96
            color: (0, 0, 0, 1)
            markup: True
            text: character['name']
