#:kivy 1.9.1
#:import NoTransition kivy.uix.screenmanager.NoTransition

AppScreenManager:
    transition: NoTransition()
    GameScreen:
    SettingsOpponentScreen:
    SettingsRulesScreen:
    SettingsScreenScreen:
    SettingsSoundScreen:

<SettingsOpponentScreen>
    name: "settings_opponent_screen"
    FixedLayoutRoot:
        FixedLayout:
            Image:
                id: board_image
                source: 'assets/img/settings-opponent-screen.png'
                pos_hint: (0, 0)
                size_hint: (1920, 1080)
            FixedImageButton:
                source: 'assets/img/not-rules.png'
                pos_hint: (0, 600)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_rules_screen"
            FixedImageButton:
                source: 'assets/img/not-screen.png'
                pos_hint: (0, 400)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_screen_screen"
            FixedImageButton:
                source: 'assets/img/not-sound.png'
                pos_hint: (0, 200)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_sound_screen"
            Button:
                pos_hint: (1600, 0)
                size_hint: (200, 100)
                text: "Resume"
                on_release: app.root.current = "game_screen"
                true_font_size: 50
                color: (0, 0, 0, 1)
                background_color: (0.1, 1, 0.1, 1)

