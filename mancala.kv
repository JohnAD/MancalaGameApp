#:kivy 1.9.1
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import settings __main__.settings
#:import character __main__.character
#:import update_setting __main__.update_setting
#:import visual_settings __main__.visual_settings

AppScreenManager:
    transition: NoTransition()
    GameScreen:
    SettingsOpponentScreen:
    SettingsRulesScreen:
    SettingsScreenScreen:
    SettingsSoundScreen:

<SettingsOpponentScreen>
    name: "settings_opponent_screen"
    FixedLayoutRoot:
        FixedLayout:
            FixedImage:
                id: board_image
                source: 'assets/img/settings-opponent-screen.png'
                pos_hint: (0, 0)
                size_hint: (1920, 1080)
            FixedImageButton:
                source: 'assets/img/not-rules.png'
                pos_hint: (0, 600)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_rules_screen"
            FixedImageButton:
                source: 'assets/img/not-screen.png'
                pos_hint: (0, 400)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_screen_screen"
            FixedImageButton:
                source: 'assets/img/not-sound.png'
                pos_hint: (0, 200)
                size_hint: (300, 200)
                on_release: app.root.current = "settings_sound_screen"
            Button:
                pos_hint: (1350, 0)
                size_hint: (200, 100)
                text: "Resume"
                on_release: app.root.current = "game_screen"
                true_font_size: 50
                color: (0, 0, 0, 1)
                background_color: (0.1, 1, 0.1, 1)
            Button:
                pos_hint: (1600, 0)
                size_hint: (300, 100)
                text: "New Game"
                on_release: app.start_new_game()
                true_font_size: 50
                color: (0, 0, 0, 1)
                background_color: (0.1, 1, 0.1, 1)
            FixedImage:
                id: ai_face_image
                pos_hint: (1600, 780)
                size_hint: (300, 300)
                source: 'assets/img/blue3.png'
            FixedLabel:
                id: ai_name
                pos_hint: (400, 800)
                size_hint: (1200, 200)
                text_size: self.size
                true_font_size: 56
                color: (0, 0, 0, 1)
                markup: True
                text: character['rank']+" of 12: [size=80]"+character['name']+"[/size]"
            FixedLabel:
                id: ai_description
                pos_hint: (400, 400)
                size_hint: (1100, 350)
                text_size: self.size
                true_font_size: 56
                color: (0, 0, 0, 1)
                valign: "top"
                markup: True
                text: character['desc']
            FixedLabel:
                id: ai_play_style
                pos_hint: (400, 200)
                size_hint: (1100, 250)
                text_size: self.size
                true_font_size: 56
                color: (0, 0, 0, 1)
                markup: True
                valign: "top"
                text: "[i]"+character['tagline']+"[/i]"
            Button:
                id: prev_ai
                pos_hint: (400, 0)
                size_hint: (200, 100)
                text: "< Prev"
                true_font_size: 56
                color: (0, 0, 0, 1)
                background_color: (0.9, 0.9, 0.9, 1)
                on_release: root.previous_ai()
            Button:
                id: next_ai
                pos_hint: (700, 0)
                size_hint: (200, 100)
                text: "Next >"
                true_font_size: 56
                color: (0, 0, 0, 1)
                background_color: (0.9, 0.9, 0.9, 1)
                on_release: root.next_ai()

