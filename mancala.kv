#:kivy 1.9.1

MancalaScreenManagement:
    GameScreen:
    SettingsScreen:

<GameScreen>
    name: "game_screen"
    FixedLayout:
        canvas:
            Rectangle:
                source: 'assets/img/birch-game-board.png'
                pos: (0, 0)
                size: (1920, 1080)

<SettingsScreen>
    name: "settings_screen"
    FixedLayout:
        canvas:
            Rectangle:
                source: 'assets/img/settings.png'
                pos: self.pos
                size: self.size
